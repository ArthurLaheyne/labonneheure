{% extends 'demo/base.html.twig' %}

{% block title %}Images-gallery{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('demo-images-gallery') }}
{% endblock %}

{% block main %}
<div class="container-fluid p-0">
    <div id="links">
        <div class="row no-gutters">
            {% for i in 0..20 %}
            {% set random = random() %}
            {% set url_big = "https://picsum.photos/3000/2000/?" ~ random %}
            {% set url_small = "https://picsum.photos/400/300/?" ~ random %}
            <div class="col-6 col-sm-4 col-md-4 col-lg-3 col-xl-2">
                <a href="{{ url_big }}" title="Banana">
                    <img src="{{ url_small }}" alt="Banana" class="img-fluid">
                </a>
            </div>
            {% endfor %}
        </div>
    </div>
</div>
{% endblock %}

{% block body_childed %}
    <div id="blueimp-gallery" class="blueimp-gallery blueimp-gallery-controls">
        <div class="slides"></div>
        <h3 class="title"></h3>
        <a class="prev">‹</a>
        <a class="next">›</a>
        <a class="close">×</a>
        <a class="play-pause"></a>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('demo-images-gallery') }}
{% endblock %}

